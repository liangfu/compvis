<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.liangfu.pwptracker"
		  android:versionCode="1"
		  android:versionName="1.0">
  <uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
  <application android:icon="@drawable/appicon"
							 android:label="@string/app_name" >
    <activity android:name=".CvTracker"
							android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
							android:screenOrientation="portrait"
							android:configChanges="keyboardHidden|orientation"
              android:label="@string/title_activity_entry">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".CaptureActivity"
							android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
							android:screenOrientation="portrait"
							android:configChanges="keyboardHidden|orientation"
							android:label="@string/title_activity_capture" >
			<!-- android:parentActivityName="com.liangfu.pwptracker.CvTracker" -->
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value="com.liangfu.pwptracker.CvTracker" />
    </activity>
    <activity android:name=".EditorActivity"
							android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
							android:screenOrientation="portrait"
							android:configChanges="keyboardHidden|orientation"
							android:label="@string/title_activity_editor" >
			<!-- android:parentActivityName="com.liangfu.pwptracker.CvTracker" -->
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value="com.liangfu.pwptracker.CvTracker" />
    </activity>
  </application>
</manifest> 
